<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>User List</title>
    <link rel="stylesheet" href="/styles.css">
</head>
<body>
    <h1>Admin Panel - User List</h1>
    
    <form method="GET" action="/users">
        <input type="text" name="search" value="<%= searchQuery %>" placeholder="Search users...">
        <button type="submit">Search</button>
    </form>

    <table>
        <thead>
            <tr>
                <th>Name</th>
                <th>Email</th>
                <th>Role</th>
            </tr>
        </thead>
        <tbody>
            <% users.forEach(user => { %>
                <tr>
                    <td><%= user.name %></td>
                    <td><%= user.email %></td>
                    <td><%= user.role %></td>
                </tr>
            <% }) %>
        </tbody>
    </table>

    <div class="pagination">
        <% if (currentPage > 1) { %>
            <a href="/users?page=<%= currentPage - 1 %>&search=<%= searchQuery %>">Prev</a>
        <% } %>
        <span> Page <%= currentPage %> of <%= totalPages %> </span>
        <% if (currentPage < totalPages) { %>
            <a href="/users?page=<%= currentPage + 1 %>&search=<%= searchQuery %>">Next</a>
        <% } %>
    </div>
</body>
</html>
